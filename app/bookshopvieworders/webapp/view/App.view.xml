<mvc:View controllerName="com.danone.bookshopvieworders.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App id="app">
        <Page id="page" showHeader="false" title="{i18n>title}" titleAlignment="Center">
            <IllustratedMessage id="message" enableVerticalResponsiveness="true"
                title="{i18n>sorry}"
                description="{i18n>tooLazy}"
                illustrationSize="Auto"
                illustrationType="sapIllus-PageNotFound">
            </IllustratedMessage>
        </Page>
    </App>
</mvc:View>
